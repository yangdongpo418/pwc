<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ToolBarTheme" parent="AppTheme">
        <item name="actionMenuTextColor">@color/black</item> <!--  敲定颜色-->
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:textSize">18sp</item> <!--  搞掂字体大小-->
    </style>

    <style name="dialog_common" parent="@style/Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@drawable/dialog_background</item>
    </style>

    <style name="section_item_divider">
        <item name="android:background">@color/list_divider_color</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1.0px</item>
    </style>

</resources>
